#include <iostream>
#include <string>
using namespace std;

struct Node
{
    char data;
    Node* next;
};

struct Stack
{
    Node* top;
};

void Init(Stack& s)
{
    s.top = NULL;
}

Node* CreateNode(char x)
{
    Node* p = new Node;
    if (p == NULL)
        return NULL;
    p->data = x;
    p->next = NULL;
    return p;
}

bool IsEmpty(Stack s)
{
    if (s.top == NULL)
        return true;
    return false;
}

void Push(Stack& s, char x)
{
    Node* p = CreateNode(x);
    if (p == NULL)
        return;
    if (IsEmpty(s))
        s.top = p;
    else
    {
        p->next = s.top;
        s.top = p;
    }
}

char Pop(Stack& s)
{
    if (IsEmpty(s))
        return NULL;
    Node* p = s.top;
    char x = p->data;
    s.top = s.top->next;
    delete p;
    return x;
}

char Top(Stack s)
{
    if (IsEmpty(s))
        return NULL;
    return s.top->data;
}

bool Check(char x, char y)
{
    if (x == '(' && y == ')')
        return true;
    if (x == '[' && y == ']')
        return true;
    if (x == '{' && y == '}')
        return true;
    return false;
}

bool CheckValid(Stack st, string s)
{
    for (int i = 0; i < s.length(); i++)
    {
        if (s[i] == '(' || s[i] == '[' || s[i] == '{')
            Push(st, s[i]);
        else if (s[i] == ')' || s[i] == ']' || s[i] == '}')
        {
            if (IsEmpty(st))
                return false;
            else if (Check(Top(st), s[i]))
                Pop(st);
            else
                return false;
        }
    }
    if (IsEmpty(st))
        return true;
    return false;
}

bool CheckValid2(Stack st, string s)
{
    for (int i = 0; i < s.length(); i++)
    {
        if (s[i] != ')')
            Push(st, s[i]);
        else
        {
            if (Top(st) == '(')
                return false;
            else
            {
                while (Top(st) != '(')
                    Pop(st);
                Pop(st);
            }
        }
    }
    if (IsEmpty(st))
        return true;
    return false;
}

//Hàm menu với 2 chức năng trên
void Menu(Stack& st)
{
    string s;
    cout << "Nhap chuoi: ";
    getline(cin, s);

    while (1 != 0)
    {
        cout << "\n-------------------------------------------------" << endl;
        cout << "1. Kiem tra hop le cua cap dau ngoac" << endl;
        cout << "2. Kiem tra dau ngoac don du thua" << endl;
        cout << "0. Thoat!" << endl;
        cout << "-------------------------------------------------" << endl;

        cout << "\nVui long nhap lua chon: ";
        int choice;
        cin >> choice;

        switch (choice)
        {
        case 1:
            if (CheckValid(st, s))
                cout << "Hop le\n";
            else
                cout << "Khong hop le\n";
            break;
        case 2:
            if (CheckValid2(st, s))
                cout << "Hop le\n";
            else
                cout << "Khong hop le\n";
            break;
        case 0: return;
            break;
        default:
            cout << "Lua chon khong hop le\n";
            break;
        }
    }
}


int main()
{
    Stack st;
    Init(st);
    Menu(st);
    return 0;
}
